<UserControl x:Class="CMVideo.Controls"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- VideoView takes most of the space -->
            <RowDefinition Height="Auto"/>
            <!-- Control buttons -->
            <RowDefinition Height="Auto"/>
            <!-- Slider -->
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Height="auto" Width="auto">
            <!-- Existing buttons go here -->
            <Button x:Name="PlayButton" Content="Play" Click="PlayButton_Click" Margin="5"/>
            <Button x:Name="PauseButton" Content="Pause" Click="PauseButton_Click" Margin="5"/>
            <Button x:Name= "StopButton" Content="Stop" Click="StopButton_Click" Margin="5"/>
            <Button x:Name="FullScreen" Content="FullScreen" Click="FullScreen_Click" HorizontalAlignment="Right" Margin="5"></Button>
            <!-- Add more buttons as needed -->
        </StackPanel>

        <Slider Name="videoSlider" 
                Grid.Row="2" 
                Minimum="0" 
                Maximum="100" 
                ValueChanged="VideoSlider_ValueChanged" 
                Margin="10" 
                VerticalAlignment="Center" 
                Height="30"/>
        <TextBox x:Name="Timestamp" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Slider x:Name="Volume" ValueChanged="Volume_ValueChanged" HorizontalAlignment="Left" Margin="395,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="120" Maximum="100" Cursor="None" Background="Black"/>

    </Grid>
</UserControl>
